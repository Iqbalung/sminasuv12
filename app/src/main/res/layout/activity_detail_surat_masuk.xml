<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:textSize="13dp"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="traspac.simansuv1.DetailSuratMasuk">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/colorSimansu"
        >
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Surat Masuk"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <ImageButton
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:id="@+id/btnDisposisi"
            android:background="@drawable/selector"
            android:padding="5dp"
            android:src="@drawable/ic_description_black_24dp"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:id="@+id/scrollView2" >

                <LinearLayout
                    android:orientation="vertical"
                    android:background="#fff"
                    android:padding="5dp"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    >
                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_margin="4dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtPengirim"
                                android:text="Pengirim"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Surat"
                                android:id="@+id/txtNomorSurat"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:gravity="right"
                            android:orientation="vertical"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sifat"
                                android:id="@+id/txtSifatSurat"
                                android:textSize="11dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jam"
                                android:id="@+id/txtJam"
                                android:textSize="11dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal"
                                android:id="@+id/txtTanggal"
                                android:textSize="11dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_above="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hal Surat"
                            android:id="@+id/txtHal"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            />
                        <TextView
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Isi Surat"
                            android:id="@+id/txtIsi"
                            android:textSize="13dp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_above="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>

                    <TableLayout
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:padding="4dp"
                            android:weightSum="100"
                            >
                            <TextView
                                android:text="Kepada"
                                android:textSize="13dp"
                                android:layout_width="100dp"
                                />
                            <TextView
                                android:id="@+id/txtKepada"
                                android:layout_weight="40"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                />
                        </TableRow>
                        <TableRow
                            android:padding="4dp"
                            android:weightSum="100"
                            >
                            <TextView
                                android:text="Jenis"
                                android:textSize="13dp"
                                android:layout_width="100dp"
                                />
                            <TextView
                                android:id="@+id/txtJenis"
                                android:text="Surat Dinas"
                                android:textSize="13dp"
                                android:layout_weight="40"
                                android:textStyle="bold"
                                />
                        </TableRow>
                        <TableRow
                            android:padding="4dp"

                            android:weightSum="100"
                            >
                            <TextView
                                android:text="No. agenda"
                                android:textSize="13dp"
                                android:layout_width="100dp"
                                />
                            <TextView
                                android:text="35"
                                android:layout_weight="40"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                />
                        </TableRow>
                        <TableRow
                            android:padding="4dp"

                            android:weightSum="100"
                            >
                            <TextView
                                android:text="Tanggal Surat"
                                android:maxWidth="120dp"
                                android:textSize="13dp"
                                />
                            <TextView
                                android:text="09 Januari 2016"
                                android:layout_weight="40"
                                android:textStyle="bold"
                                android:id="@+id/txtTanggalSurat"
                                android:textSize="13dp"
                                />
                        </TableRow>
                        <TableRow
                            android:padding="4dp"
                            android:weightSum="100"
                            >
                            <TextView
                                android:text="Tembusan"
                                android:layout_width="100dp"
                                android:textSize="13dp"
                                />
                            <TextView
                                android:text="-"
                                android:id="@+id/txtTembusan"
                                android:layout_weight="40"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                />
                        </TableRow>
                        <TableRow
                            android:padding="4dp"
                            android:weightSum="100"
                            >
                            <TextView
                                android:text="Klasifikasi"
                                android:layout_width="100dp"
                                android:textSize="13dp"
                                />
                            <TextView
                                android:text="Umum"
                                android:id="@+id/txtKlasifikasi"
                                android:layout_weight="40"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                />
                        </TableRow>
                        <TableRow
                            android:padding="4dp"
                            android:weightSum="100"
                            >
                            <TextView
                                android:text="Referensi"
                                android:layout_width="100dp"
                                android:textSize="13dp"
                                />
                            <TextView
                                android:text="-"
                                android:layout_weight="40"
                                android:textStyle="bold"
                                android:id="@+id/txtReferensi"
                                android:textSize="13dp"
                                />
                        </TableRow>

                        <TableRow
                            android:padding="4dp"
                            android:weightSum="100"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:text="Lampiran"
                                android:layout_width="100dp"
                                android:textSize="13dp"
                                />
                        </TableRow>
                        <FrameLayout
                            android:layout_marginLeft="100dp"
                            android:id="@+id/frameLampiran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="true"
                            android:minHeight="50dp">

                        </FrameLayout>

                    </TableLayout>

                </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:gravity="bottom|center"
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center"
            android:background="#cc000000"
            android:layout_height="50dp">
            <ImageButton
                android:id="@+id/btnRiwayatDispo"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/selector"
                android:src="@drawable/ic_update_black_24dp"
                />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>

